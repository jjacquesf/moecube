{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "strict": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}